#!/bin/bash
echo "=== Bluetooth Service Status ==="
systemctl status bluetooth --no-pager -l
echo ""
echo "=== BT-Tether Service Status ==="
systemctl status bt-tether --no-pager -l
echo ""
echo "=== Recent BT-Tether Logs ==="
if [ -f /var/log/bt-tether-auto.log ]; then
    echo "Last 20 lines from /var/log/bt-tether-auto.log:"
    tail -20 /var/log/bt-tether-auto.log
else
    echo "No bt-tether logs found"
fi
echo ""
echo "=== Journal Logs (last 20 lines) ==="
journalctl -u bt-tether --no-pager -n 20
