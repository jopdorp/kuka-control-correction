#!/bin/bash
echo "Starting Bluetooth tethering..."
sudo systemctl enable bluetooth
sudo systemctl start bluetooth
sudo systemctl enable bt-tether
sudo systemctl start bt-tether
echo "Bluetooth tethering started and enabled"
echo ""
echo "=== Service Status ==="
systemctl status bluetooth --no-pager -l
echo ""
systemctl status bt-tether --no-pager -l
